<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:text="@string/app_numero"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAumentar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="48dp"
        android:text="@string/app_aumentar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numero" />

    <Button
        android:id="@+id/btnDiminuir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="72dp"
        android:text="@string/app_diminuir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAumentar" />

    <Button
        android:id="@+id/btnResetar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_resetar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDiminuir"
        app:layout_constraintVertical_bias="0.082" />

    <Button
        android:id="@+id/x1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_x1"
        app:layout_constraintTop_toBottomOf="@id/btnResetar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/x5"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/x5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_x5"
        app:layout_constraintTop_toBottomOf="@id/btnResetar"
        app:layout_constraintStart_toEndOf="@id/x1"
        app:layout_constraintEnd_toStartOf="@id/x10"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/x10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_x10"
        app:layout_constraintTop_toBottomOf="@id/btnResetar"
        app:layout_constraintStart_toEndOf="@id/x5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
